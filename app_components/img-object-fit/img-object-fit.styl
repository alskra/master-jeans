.img-object-fit{
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  object-fit: cover;
  visibility: hidden;
  &.contain{
    background-size: contain;
    object-fit: contain;
  }
  &.scale-down{
    background-size: contain;
    object-fit: scale-down;
  }
}