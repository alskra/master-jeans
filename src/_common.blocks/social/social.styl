.social
  display flex
  justify-content center
  flex-flow row wrap
  margin-bottom -10px
  &__item
    display flex
    justify-content center
    align-items center
    color #888
    text-decoration none !important
    margin 0 25px 10px
    font-size 27px
    line-height 1
    &.icon-tw
      font-size 24px
    &.icon-ins
      font-size 26px
    &:hover, &:focus
      color $red-1

  @media (min-width $screen-sm-min)
    justify-content flex-start
    &__item
      margin 0 32px 10px 0
      font-size 19px
      &.icon-tw
        font-size 17px
      &.icon-ins
        font-size 17px
