.menu
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background $blue-1
  padding 25px 20px
  z-index $zindex-navbar-fixed
  display none
  .social
    &__item
      margin-left 13px
      margin-right 13px
      font-size 24px
      &:hover, &:focus
        color white
  &__inner
    display flex
    flex-flow column
    height 100%
  &__header
    flex none
    display flex
    justify-content flex-end
    align-items flex-start
    padding-top 3px
    margin-bottom 30px
  &__content
    flex 0 1 100%
    overflow hidden
    display flex
    flex-flow column
    justify-content center
  &__footer
    flex none
    margin-top 30px
  &__inner-2
    overflow-y auto
    max-height 100%
  &__item
    text-align center
    margin 25px 0
  &__btn
    color white
    text-decoration none !important
    display block
    font-size 18px
    line-height 1.25em
    font-weight 700
    text-transform uppercase
    &:hover, &:focus
      color white
  &__label
    display block
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  @media (min-width $screen-sm-min)
    left auto
    right 0
    width percentage(340/$screen-sm-min)
    padding 50px percentage(102/$screen-sm-min) 50px 60px
    .social
      justify-content flex-start
      margin-left -10px
      &__item
        margin-left 10px
        margin-right 10px
        font-size 18px
    &__header
      padding-top 6px
    &__item
      text-align left
      margin 30px 0
    &__btn
      font-size 14px

  @media (min-width $screen-md-min)
    display block !important
    opacity 1 !important
    position relative
    right auto
    width auto
    padding 0
    background none
    &__inner-2
      display flex
    &__item
      margin 0 0 0 30px
    &__btn
      &:hover, &:focus
        color $blue-1
