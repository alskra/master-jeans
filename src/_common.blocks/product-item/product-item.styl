.product-item
  width calc(100% - 20px)
  margin 0 10px 35px
  &__img-wrap
    display block
    text-decoration none !important
    color $text-color !important
    position relative
    padding-top percentage(423/268)
    background-color #ececec
    border 1px solid #ececec
    margin-bottom 24px
    overflow hidden
    &:hover, &:focus
      &>{$p}__overlay
        opacity 1
      &+{$p}__title
        &>{$p}__title-link
          color $red-1
  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba(white, 0.55)
    display flex
    justify-content center
    align-items center
    padding 10px
    opacity 0
    transition opacity 0.15s 0.1s
  &__btn-view
    width 160px
  &__title
    font-size 14px
    line-height 1.25em
    overflow hidden
    max-height @line-height*2
    text-align center
    margin 0 0 15px
  &__title-link
    color inherit
    text-decoration none !important
    display block
    &:hover, &:focus
      color $red-1
  &__price-box
    text-align center
    color #2c2c2c
    font-weight 900
    font-size 14px
    line-height 1.25em
    text-transform uppercase
  &__price
    margin 0 4px
    .fa-rub
      display inline
      font-weight 700
      font-size 13px
    &_new
      color $red-1
    &_old
      color #d4d4d4
      font-weight 700
      text-decoration line-through

  &_label
    &_new
      &>{$p}__img-wrap
        &:before
          content 'NEW'
          position absolute
          top 10px
          left 10px
          z-index 10
          color $red-1
          font-weight 900
          font-size 11px
          line-height 1em
          text-transform uppercase
          border-top 1px solid
          border-bottom 1px solid
          padding-top 1px
          cursor default

  @media (min-width 480px)
    width unquote('calc(' + percentage(1/2) + ' - 20px)')

  @media (min-width $screen-sm-min)
    width unquote('calc(' + percentage(1/3) + ' - 20px)')

  @media (min-width $screen-md-min)
    width unquote('calc(' + percentage(1/4) + ' - 20px)')
