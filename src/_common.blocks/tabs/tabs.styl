.tabs
  &__btn
    text-decoration none !important
    display flex
    margin 1px -20px 0
    color #2c2c2c
    font-weight 500
    font-size 16px
    line-height 1.25em
    text-transform uppercase
    background-color #f3f3f3
    height 41px
    padding 0 20px
    transition 0.2s
    &:hover, &:focus
      color #888
      background-color #e7e7e7
      &>{$p}__icon
        color #888
    &_opened
      &, &:hover, &:focus
        color #cfcfcf
        background-color #333
        &>{$p}__icon
          color white
          &:after
            transform rotate(0deg)
  &__label
    flex 1 1 auto
    display block
    text-overflow ellipsis
    align-self center
    margin-top 1px
    strong
      font-weight inherit
  &__icon
    flex none
    width 17px
    display flex
    justify-content center
    align-items center
    color #333
    transition inherit
    position relative
    &:before, &:after
      content ''
      position absolute
      width 17px
      border-top 1px solid
      top 50%
      left 0
      border-radius 1px
      transition inherit
    &:after
      transform rotate(90deg)
  &__item
    display none
    padding 30px 0

  @media (min-width $screen-sm-min)
    display flex
    flex-flow row wrap
    justify-content center
    align-items flex-start
    &__btn
      height 44px
      padding 0 15px
      margin 0 10px -1px
      background none
      color #2c2c2c !important
      transition none
      position relative
      z-index 2
      &:hover, &:focus
        background none
      &_opened
        &, &:hover, &:focus
          font-weight 900
          background linear-gradient($red-1, $red-1) no-repeat 50% 100%/46px 1px
    &__label
      strong
        color #cfcfcf
    &__icon
      display none
    &__separator
      flex none
      order 1
      width 100%
      &:before
        content ''
        display block
        border-bottom 1px solid #ececec
        margin 0 -99999px
    &__item
      flex none
      order 2
      width 100%
      padding 45px 0
