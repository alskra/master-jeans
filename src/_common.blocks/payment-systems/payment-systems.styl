.payment-systems
  display flex
  justify-content center
  align-items center
  padding 20px 0
  &__item
    overflow hidden
    padding 7px
    &:nth-child(2)
      &>{$p}__img
        max-height 26px
    &:nth-child(3)
      &>{$p}__img
        max-height 19px
  &__img
    max-width 100%
    max-height 24px

  @media (min-width $screen-sm-min)
    justify-content flex-start
    //padding 0
    margin 0 0 0 -8px
