.row-form
  clearfix()
  margin-bottom 18px
  text-align left
  .field, .select
    width 100%
  &__label
    font-weight 500
    font-size 12px
    line-height 1.25em
    text-transform uppercase
    display inline-block
    margin-bottom 7px
  &_btn
    text-align center
    margin 18px 0 0
  &_btn-2
    text-align center
    margin 18px 0 0

  @media (min-width $screen-md-min)
    &_btn
      text-align right