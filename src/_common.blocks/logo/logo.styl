.logo
  color white !important
  text-decoration none !important
  width 41px
  height 41px
  &__img
    width 100%
    height 100%

  @media (min-width $screen-sm-min)
    width 192px
    height auto
    position absolute
    top 0
    left 50%
    margin 0 (-@width/2)
    &:before
      content '\00AE'
      color white
      font-weight 500
      font-size 14px
      line-height 1em
      position absolute
      top 5px
      right 13px
      pointer-events none

  @media (min-width $screen-md-min)
    width 226px
    margin 0 (-@width/2)
    &:before
      font-size 17px
      right 15px