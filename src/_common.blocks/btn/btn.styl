.btn
  &_type
    &_1
      color white
      font-weight 700
      font-size 12px
      text-transform uppercase
      padding 5px 20px
      background $blue-1
      height 39px
      &:hover,
      &:focus,
      &.focus
        color white
        background-color $blue-2
      &:active,
      &.active
        box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    &_2
      color white
      font-weight 700
      font-size 14px
      text-transform uppercase
      padding 5px 15px
      background $blue-1
      height 45px
      width 180px
      &:hover,
      &:focus,
      &.focus
        color white
        background-color $blue-2
      &:active,
      &.active
        box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
    &_3
      color white
      font-weight 700
      font-size 14px
      text-transform uppercase
      padding 5px 15px
      border 2px solid white
      height 45px
      width 180px
      &:hover,
      &:focus,
      &.focus
        color #1d1c2a
        background-color white
        border-color white
      &:active,
      &.active
        box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)

  &__label
    overflow hidden
    text-overflow ellipsis

