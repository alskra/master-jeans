.gallery-slider-2
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  .container-fluid
    height 100%
    padding 0
    position relative
    &:before
      content ''
      position absolute
      top 0
      left -3.5%
      right -3.5%
      bottom 0
      background url("gallery-bg.jpg") no-repeat 50% 0/100% auto
      display block
  .slick-slider
    position absolute
    top -30px
    left -30px
    right -30px
    bottom -30px
    margin 4.9% 11.3% 0
    overflow hidden
  .slick-track, .slick-slide
    height 100%
  .slick-list
    height calc(100% - 40px)
    padding 15px !important
  .slick-slide
    padding 15px
    display flex
    flex-flow column
    justify-content space-between
    position relative
    &.slick-active
      & {$p}__item, & {$p}__overlay
        box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
  .slick-arrow
    position absolute
    font-size 20px
    line-height 1
    bottom 20px
    z-index 10
    color white
    transition 0.15s
    width 28px
    padding 0 6px
    height 31px
    background linear-gradient(white, white) no-repeat 50% 50%/100% 3px
    background-clip content-box
    transform translate3d(0, 0, 0)
    &:before, &:after
      content ''
      position absolute
      border-top 4px solid transparent
      border-bottom 4px solid transparent
      height 9px
      top 50%
      margin -4.5px 0
    &:before
      border-right 6px solid
      left 0
    &:after
      border-left 6px solid
      right 0
    &:hover
      width 38px
  .slick-prev
    right 50%
    margin-right -6px
  .slick-next
    left 50%
    margin-left -6px
  &__item
    position relative
    height 100%
    cursor pointer
    //box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
    &:before
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color #282735
      opacity 0.7
      .backgroundblendmode &
        opacity 1
        mix-blend-mode color
    &:hover
      & {$p}__overlay
        transition visibility 0s, opacity 0.15s
        visibility visible
        opacity 1
    &_row
      height calc(50% - 10px)
  &__overlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#1d1c2a, 0.9)
    //box-shadow 0 7px 27.8px 1.2px rgba(0, 0, 0, 0.35)
    z-index 2
    padding 15px
    text-align center
    display flex
    flex-flow column
    justify-content center
    transition visibility 0s 0.15s, opacity 0.15s
    visibility hidden
    opacity 0
    &:before
      content ''
      position absolute
      top -17px
      left -17px
      right -17px
      bottom -17px
      border 4px solid white
      pointer-events none
  &__title
    flex none
    color white
    font-size 18px
    margin-bottom 15px
    width 100%
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
  &__caption
    //flex 1 1 auto
    color #cfcddd
    font-size 15px
    line-height ($line-height-base)em
    margin-bottom 15px
    width 100%
    max-height 30%
    overflow hidden
  &__icon-view
    flex none
    font-size 22px
    line-height 1
    color $blue-3
    width 100%
    overflow hidden

  @media (min-width $screen-sm-min)
    display flex
    flex-flow column
    justify-content center
    bottom 50px
    .container-fluid
      max-height 350px
      &:before
        top -60px
        left 0
        right 0
        bottom -40px
        background url("gallery-bg.jpg") no-repeat 50% 0/auto 100%
    .slick-slider
      margin 0

  @media (min-width $screen-md-min)
    .container-fluid
      max-height 445px
      &:before
        top -90px
        bottom -80px