.gallery-slider-2
  margin 35px 0 0
  &__view
    overflow hidden
    background-color white
    margin 0 -20px
    .slick-arrow
      square 51px
      background-color white
      border 1px solid #ececec
      position absolute
      top 50%
      margin -25px 0
      font-size 10px
      line-height 1em
      padding-top 1px
      color #989898
      z-index 10
      transition 0.15s
      &:hover, &:focus
        border-color #333
        background #333
        color #fff
    .slick-prev
      left -1px
      transform rotate(180deg)
    .slick-next
      right -1px
  &__view-item
    position relative
    padding-top percentage(325/576)
  &__view-img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__thumb
    position relative
    overflow hidden
    margin 10px 0
  &__thumb-inner
    overflow hidden
    .slick-list
      margin 0 -5px
    .slick-slide
      margin 0 5px
      position relative
      cursor pointer
      background-color #f3f3f3
      border 1px solid #d4d4d4
      &.loading
        &:before
          width 20px
          height 20px
          border-width 2px
          margin -10px
      &.slick-current
        img
          opacity 0.3 !important
  &__thumb-item
    position relative
    padding-top percentage(1)
  &__thumb-img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition opacity 0.15s

  @media (min-width $screen-sm-min)
    &__view
      width 576px
      margin 0 auto
    &__thumb
      width 290px
      margin 10px auto

  @media (min-width $screen-md-min)
    &__view
      margin 0
