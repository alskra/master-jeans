.nav-catalog-wrap
  margin -30px 0 30px
  background url("nav-catalog-wrap-bg.jpg") repeat 0 0

  @media (min-width $screen-sm-min)
    position relative
    &:after
      content ''
      position absolute
      top 0
      left 50%
      right 0
      bottom 0
      margin-left -114px
    &_men
      &:after
        background url("nav-catalog-wrap-men.jpg") no-repeat 50% 50%/cover
    &_kids
      &:after
        background url("nav-catalog-wrap-kids.jpg") no-repeat 50% 50%/cover
    .nav-catalog
      width 50%
      padding-right 114px + 20px

  @media (min-width $screen-sm-min)
    margin -40px 0 40px

  @media (min-width $screen-md-min)
    min-height 455px
    &:after
      margin-left -45px
    .nav-catalog
      padding-right 45px + 20px


