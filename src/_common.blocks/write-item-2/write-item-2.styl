.write-item-2
  width calc(100% - 20px)
  margin 0 10px 35px
  p
    margin 0
  &__img-wrap
    display block
    text-decoration none !important
    color $text-color !important
    position relative
    padding-top unquote('calc(' + percentage(204/362) + ' + 40px)')
    overflow hidden
    margin 0 -20px 22px
    &:hover, &:focus
      &+{$p}__col-right
        &>{$p}__header
          &>{$p}__title
            &>{$p}__title-link
              color $red-1
  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__header
    font-size 14px
    line-height 1.25em
    display flex
    align-items flex-start
    margin 0 0 15px
  &__title
    flex 1 1 auto
    font-size 14px
    line-height 1.25em
    overflow hidden
    height @line-height*2
    text-align left
    margin 0
  &__title-link
    color inherit
    text-decoration none !important
    display block
    &:hover, &:focus
      color $red-1
  &__date
    flex none
    overflow hidden
    margin-left 10px
    color #cbcbcb
    font-weight 500
    font-size 12px
    text-transform uppercase
  &__content
    font-size 15px
    line-height (18/15)em
    overflow hidden
    height @line-height*5
    margin-bottom 20px
  &__footer
    text-align left
  &__read-more
    display inline-block
    color #888
    font-weight 500
    font-size 12px
    line-height 1.25em
    text-transform uppercase
    text-decoration none !important
    &:hover, &:focus
      color #2c2c2c
    .icon
      font-size 10px
      margin 0 0 0 12px

  @media (min-width 640px)
    border 1px solid #ebebeb
    display flex
    align-items flex-start
    &__img-wrap
      flex none
      margin -1px 20px -1px -1px
      width percentage(362/728)
      padding-top percentage(204/728)
    &__col-right
      flex 1 1 auto
      overflow hidden
      padding 20px 15px
    &__content
      height (18/15)em*2

  @media (min-width $screen-sm-min)
    &__content
      height (18/15)em*4

  @media (min-width $screen-md-min)
    &__img-wrap
      width percentage(362/1130)
      padding-top percentage(204/1130)
      margin-right 30px
    &__col-right
      padding 32px 25px
    &__content
      height (18/15)em*3


