.brand-item-2
  width calc(100% - 20px)
  margin 0 10px 20px
  background-color white
  &__inner
    display block
    text-decoration none !important
    color inherit !important
    border 1px solid #ececec
    padding-top percentage(115/279)
    position relative
    &:hover, &:focus
      border-color #bdbdbd
      & {$p}__title
        color #2c2c2c
  &__cols
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    display flex
  &__col
    width 50%
    overflow hidden
    &_1
      padding 20px
    &_2
      padding 10px
      display flex
      flex-flow column
      justify-content center
  &__title
    color #999
    font-weight 500
    font-size 14px
    line-height 1.25em
    text-transform uppercase
    width 100%
    overflow hidden
    margin 0
    max-height @line-height*3
    text-align center
    transition 0.15s

  @media (min-width 640px)
    width calc(50% - 20px)

  @media (min-width $screen-md-min)
    &__inner
      padding-top percentage(183/554)
    &__col
      &_1
        padding 60px