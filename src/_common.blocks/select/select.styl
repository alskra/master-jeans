.select
  display inline-block
  vertical-align top
  &_filter
    .ik_select_link
      display block
      color #2c2c2c
      font-weight 500
      font-size 12px
      line-height 1.25em
      text-transform uppercase
      position relative
      cursor pointer
      padding-right 20px
      &:before
        content ''
        position absolute
        top 50%
        right 0
        margin -7px 2px
        color #686868
        square 7px
        border-top 1px solid
        border-right 1px solid
        transform rotate(135deg)
      &.ik_select_link_opened
        &:before
          margin -3px 2px
          transform rotate(-45deg)
    .ik_select_link_text
      text-overflow ellipsis

.select-dd
  .ik_select_list
    border 1px solid #2c2c2c
    margin-top -1px
    background-color white
    padding 3px 0
    //box-shadow 0 6px 12px rgba(0, 0, 0, .175)
  ul
    list-style none
    margin 0
    padding 0
  li
    padding 9px 30px 8px 12px
    cursor pointer
    font-size 12px
    line-height 1.25em
    font-weight 500
    text-transform uppercase
    color $text-color
    transition 0.15s
    &.ik_select_hover
      color $red-1
  .ik_select_option_label
    display block
    overflow hidden
    //white-space nowrap

.select_filter-dd
  .ik_select_list
    border 1px solid #ececec
    margin 8px 0 0 -16px
    background-color white
    padding 5px 0
  ul
    list-style none
    margin 0
    padding 0
  li
    padding 9px 20px 8px 15px
    cursor pointer
    color #2c2c2c
    font-weight 500
    font-size 12px
    line-height 1.25em
    text-transform uppercase
    transition 0.15s
    &.ik_select_hover
      color $red-1
  .ik_select_option_label
    display block
    overflow hidden
    white-space nowrap