.main-slider
  height calc(100vh - 41px)
  margin-bottom 40px
  p
    margin 0
  .slick-list, .slick-track, .slick-slide
    height 100%
  .container-fluid
    height 100%
  .slick-arrow
    square 51px
    background-color #333
    position absolute
    top 50%
    margin -25px 0
    font-size 10px
    line-height 1em
    padding-top 1px
    color white
    z-index 10
    transition 0.15s
    &:hover, &:focus
      background $red-1
  .slick-prev
    left 0
    transform rotate(180deg)
  .slick-next
    right 0
  &__item
    position relative
  &__img-wrap
    height 100%
  &__text
    position absolute
    left 0
    width 100%
    bottom 0
    min-height 30%
    background rgba(black, 0.6)
    padding 20px 20px
    z-index 1
    color white
    line-height 1.25
  &__header
    font-size 16px
    text-transform uppercase
    letter-spacing 0.2em
    text-align center
    margin 0 0 10px
    text-overflow ellipsis
  &__title
    font-size 24px
    line-height 1em
    text-align center
    font-weight 700
    color inherit
    margin 0 0 10px
    overflow hidden
    max-height @line-height*2
  &__hr
    border 0
    border-top 1px solid rgba(#333, 0.8)
    margin 15px 0
  &__caption
    display flex
    align-items center
  &__caption-inner
    flex 1 1 auto
    font-size 14px
    line-height 1.25em
    text-transform uppercase
    overflow hidden
    max-height @line-height*5
  &__sale
    font-size 38px
    line-height 1
    flex none
    font-weight 700
    margin-right 6px
    small
      font-size 18px
      display inline-block
      vertical-align middle
      margin -9px -8px 0 0
  &__btn-wrap
    margin-top 30px
    text-align center

  @media (min-width $screen-sm-min)
    height auto
    margin-bottom 25px
    .slick-list
      height 450px
    .slick-dots
      padding 14px 20px
    .slick-arrow
      margin -48px 0
    &__item
      display flex !important
    &__img-wrap
      flex none
      width 50%
    &__text
      position static
      flex none
      width 50%
      background radial-gradient(circle at 50% 50%, rgba(white, 0.5), transparent) no-repeat, url("text-bg.jpg") repeat 0 0/780px auto
      display flex
      flex-flow column
      justify-content center
      color #333
      padding 20px 45px
    &__header
      color #2c2c2c
    &__title
      font-size 53px
    &__hr
      border-top-color rgba(#333, 0.2)
      margin 10px 0 22px
    &__btn-wrap
      margin-top 45px

  @media (min-width $screen-md-min)
    .slick-list
      height 550px
    .slick-prev
      left 30px
    .slick-next
      right 30px
    &__img-wrap
      width percentage(1/3)
    &__text
      width percentage(1/3)
      background-size auto, auto
      padding 20px 85px
    &__header
      margin-bottom 20px
    &__title
      font-size 67px
