.brand-item
  display block
  text-decoration none !important
  color $text-color !important
  padding-top calc(100% - 40px)
  border 20px solid transparent
  position relative
  &__img
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    max-width 100%
    max-height 70px
    margin auto
