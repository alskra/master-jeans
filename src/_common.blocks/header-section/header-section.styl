.header-section
  flex none
  padding 25px 0
  margin-top -25px
  position relative
  z-index 10
  p
    margin 0
    max-width none
  &__row
    display flex
  &__col
    &_1
      flex 1 1 auto
      overflow hidden
    &_4
      margin-left 35px
      padding-top 3px
  &__title
    font-size 18px
    font-weight 400
    margin 5px 0 6px
    text-transform uppercase

  @media (min-width $screen-sm-min)
    padding 50px 0
    margin-top -50px
    &__col
      &_4
        padding-top 6px
    &__title
      font-size 24px
      margin 4px 0 5px

  @media (min-width $screen-md-min)
    &__col
      &_3
        margin-left 125px
    &__title
      text-align center