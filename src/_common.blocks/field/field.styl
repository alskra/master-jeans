.field
  border 1px solid #d4d4d4
  padding 0 12px
  display inline-flex
  vertical-align top
  align-items center
  background-color white
  height 39px
  font-size 12px
  font-weight 500
  color $text-color
  transition 0.15s
  &::placeholder
    color $text-color
    opacity 1

  &,
  &:active,
  &.active
    &:focus,
    &.focus,
    &.ik_select_link_focus
      outline 0
      border-color #2c2c2c
      color #2c2c2c

  &:active,
  &.active
    outline 0

  &.disabled,
  &[disabled],
  fieldset[disabled] &
    cursor $cursor-disabled
    opacity 0.5
    box-shadow none
    pointer-events none

  &_invalid
    border-color $red-1 !important

  &_area
    height 60px
    padding-top 5px
    padding-bottom 5px
    resize vertical

  &_select
    display flex
    position relative
    cursor pointer
    padding-right 30px
    &:before
      content ''
      position absolute
      top 50%
      right 12px
      margin -6px 2px
      color #686868
      square 7px
      border-top 1px solid
      border-right 1px solid
      transform rotate(135deg)
    &.ik_select_link_opened
      &:before
        margin -2px 2px
        transform rotate(-45deg)
    .ik_select_link_text
      text-overflow ellipsis
      margin-top 2px


