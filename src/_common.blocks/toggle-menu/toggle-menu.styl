.toggle-menu
  padding 0
  border 0
  background $red-1
  width 41px
  height 41px
  font-size 24px
  line-height 1
  color white
  position relative
  transition 0.15s
  &:active
    transition none
    background darken($red-1, 10)
  &__line
    size 17px 1px
    background white
    transition 0.2s linear
    transform-origin 50% 50%
    display block
    margin 0 auto
    pointer-events none
    &+&
      margin-top 6px
  &:focus
    outline 0
  &_opened
    &>{$p}__line
      width 21px
      &:nth-child(1)
        transform rotate(45deg)
      &:nth-child(2)
        opacity 0
        margin -1px auto -7px
      &:nth-child(3)
        transform rotate(-45deg)