.shops-map
  height 385px
  margin -30px 0 0
  &__item
    font-size 14px
    line-height 1em
    display flex
    align-items flex-start
    color black
    text-decoration none !important
    font-weight 700
    max-width 150px
    &:hover, &:focus
      color $red-1
  &__item-icon
    font-size 11px
    line-height 1
    square 22px
    background $red-1
    color white
    flex none
    display flex
    justify-content center
    align-items center
    margin -4px 10px -4px 0
    border-radius 50%
  &__item-label
    text-shadow 0 0 1px white, 0 0 1px white, 0 0 1px white, 0 0 1px white, 0 0 1px white
    overflow hidden

  @media (min-width 640px)
    margin -40px 0 30px

  @media (min-width $screen-md-min)
    margin -40px 0 40px
